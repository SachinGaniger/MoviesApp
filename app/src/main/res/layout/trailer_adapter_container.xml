<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <VideoView
        android:id="@+id/vv_trailer"
        android:layout_width="220dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_castName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deadpool july 26, 2012 Trailer 1, Starring Ryan Reynolds, Hugh Jackman, Samuel "
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:textAlignment="center"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vv_trailer"
        app:layout_constraintTop_toBottomOf="@+id/vv_trailer" />

</androidx.constraintlayout.widget.ConstraintLayout>